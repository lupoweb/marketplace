<%= form_for @content , html: { multipart: true } do |f| %>
  <% if @content.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@content.errors.count, "error") %> prohibited this content from being saved:</h2>

      <ul>
      <% @content.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <label class="grey-text">Choose and upload your file</label><br>
    <%= f.file_field :attachment %>
  </div>
  <br>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: "materialize-textarea" %>
  </div>
  <div class="field">
    <%= f.label :price_min_50_cent %><br>
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <label class="grey-text">Choose and upload your cover image for your attachment</label><br>
    <%= f.file_field :cover %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit 'Save', class: "btn btn-form" %>
  </div>
<% end %>
<br>
